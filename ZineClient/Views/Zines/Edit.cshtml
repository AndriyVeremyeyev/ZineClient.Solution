@model ZineClient.Models.Zine
<h1>Edit Zine</h1>


<div class="registration-form">
  <form asp-controller="Zines" asp-action="Edit" method="post">

    <input type="hidden" value="@Model.ZineId"  asp-for="ZineId" >
    <input type="hidden" value="@Model.OrganizationId" asp-for="OrganizationId">

    <div class="form-group">
      <label for="Name">Name</label>
      <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
      <label for="Description">Description</label>
      <textarea rows="8" class="form-control" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
      <label for="PublicationDate">Publication Date</label>
      <input type="date" class="form-control" asp-for="PublicationDate">
    </div>

    <div class="form-group">
      <label for="IssueNumber">Issue Number</label>
      <input type="number" class="form-control" asp-for="IssueNumber">
    </div>
    
    <div class="form-group">
      <label for="MainImageUrl">Cover Image Url</label>
      <input type="string" class="form-control" asp-for="MainImageUrl">
    </div> 

    <input class="btn btn-light" type="submit" value="Edit">
  </form>
</div>