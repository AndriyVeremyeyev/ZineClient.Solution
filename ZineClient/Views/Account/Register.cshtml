@model RegisterViewModel

@{
  ViewData["Title"] = "Create an account";
}

  <div class="text-center">
    <h1>@ViewData["Title"]</h1>
  </div>

<div class="registration-form">
  <form asp-controller="Account" asp-action="Register" method="post">

    <div class="form-group">
      <label for="FirstName">First Name</label>
      <input class="form-control" asp-for="FirstName">
    </div>
    <div class="form-group">
      <label for="LastName">Last name</label>
      <input class="form-control" asp-for="LastName">
    </div>

    <div class="form-group">
      <label for="Email">Email</label>
      <input class="form-control" asp-for="Email" required>
    </div>

    <div class="form-group">
      <label for="Password">Password</label>
      <input class="form-control" asp-for="Password" required>
    </div>
    <div class="form-group">
      <label for="ConfirmPassword">Confirm password</label>
      <input class="form-control" asp-for="ConfirmPassword">
    </div>

    <input class="btn btn-light" type="submit" value="Register">
    <small class="form-text text-muted">Already have an account? <a asp-action="Login">Sign in.</a></small>

  </form>
</div>