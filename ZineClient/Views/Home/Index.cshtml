@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Zine Maker</h1>
    <p>Connect with creative communities</p>
</div>

<div class="zine-grid-display">
    @foreach (Zine zine in ViewBag.TopFour)
    {
        <div class="zine-thumbnail">
            <img class="zine-cover" src="@zine.MainImageUrl">
            <div class="overlay">
                <div class="zine-details-link">
                    @Html.ActionLink($"{zine.Name}", "Details", new { id = zine.ZineId })
                </div>
            </div>            
        </div>
    }
</div>