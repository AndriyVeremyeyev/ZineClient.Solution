@model ZineClient.Models.Tag

@{
  ViewData["Title"] = "Delete #" + @Model.Name;
}

<div class="text-center">
  <h1>@ViewData["Title"]</h1>
</div>


<h4>Are you sure you want to delete this tag?</h4>

<div class="registration-form">
  <form asp-controller="Tags" asp-action="Delete" method="post">
    <input class="btn btn-light" type="submit" value="Delete">
  </form>
</div>